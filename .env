# ===== إعدادات التطبيق الأساسية =====
NODE_ENV=production
PORT=5050
HOSTNAME=0.0.0.0
NEXT_PUBLIC_APP_URL=https://rima.example.com

# ===== إعدادات قاعدة البيانات MongoDB =====
# رابط الاتصال بقاعدة البيانات (في حالة Docker)
MONGODB_URI=mongodb://rimauser:rimapassword@mongodb:27017/rima?authSource=admin
# بيانات اعتماد المستخدم الرئيسي (لإنشاء قاعدة البيانات)
MONGO_USERNAME=admin
MONGO_PASSWORD=password

# ===== إعدادات NextAuth =====
# مفتاح التشفير (يجب أن يكون قيمة عشوائية آمنة)
NEXTAUTH_SECRET=your_nextauth_secret_key_here_make_it_strong_and_random
# عنوان التطبيق (يستخدم في روابط البريد الإلكتروني وإعادة التوجيه)
NEXTAUTH_URL=https://rima.example.com

# ===== إعدادات Stripe للمدفوعات =====
# المفتاح السري لـ Stripe (من لوحة تحكم Stripe)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
# مفتاح Webhook لـ Stripe (للإشعارات)
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# ===== إعدادات الصور =====
# الحد الأقصى لحجم الصورة بالبايت (5 ميجابايت)
MAX_IMAGE_SIZE=5242880
# مجلد تخزين الصور (نسبي لمجلد public)
UPLOADS_FOLDER=uploads

# ===== إعدادات أخرى =====
# منطقة التوقيت
TZ=Asia/Riyadh
# لغة التطبيق الافتراضية
DEFAULT_LOCALE=ar